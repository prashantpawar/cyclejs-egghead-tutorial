{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
   "awesomeTypescriptLoaderOptions": {
       "target": "es6",
       "useBabel": true,
       "useCache": false
   },
   "exclude": [
       "node_modules",
       "bower_components"
   ]
}
